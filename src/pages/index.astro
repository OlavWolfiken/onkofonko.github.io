---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Socials from "../components/Socials.astro";
import Discord from "../components/Discord.astro";
---

<Layout title="Ondrej Michal's Site">
	<body>
		<section>
			<h1>
				Hello, I'm <span class="text-gradient">Ondrej Michal</span>
			</h1>
			<p class="maincontent">
				I'm a 20-year-old university student studying Management who
				enjoys HTML/CSS. I'm planning to start learning Kotlin soonâ„¢.
				<br />
			</p>
		</section>
		<section>
			<h2>Projects:</h2>
			<Card
				href="https://github.com/onkofonko/onkofonko.github.io/tree/main/public/theme"
				title="Alexis Modern Discord theme fixes"
				body="My attempt to keep Alexis Modern Discord Theme alive."
			/>
		</section>
		<section>
			<h2>Socials:</h2>
			<div class="socials">
				<Socials
					icon="ri:twitter-fill"
					href="https://twitter.com/OnkoOfTheWired"
					username="@OnkoOfTheWired"
				/>
				<Socials
					icon="ri:github-fill"
					href="https://github.com/onkofonko"
					username="onkofonko"
				/>
				<Discord icon="ri:discord-fill" username="Onko#6132" />
			</div>
		</section>
	</body>
</Layout>

<style>
	section {
		margin: 1rem 0;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 1rem 0;
		color: white;
	}

	@media only screen and (max-width: 395px) {
		h1 {
			font-size: 2.6rem;
		}
	}

	h2 {
		font-size: 2rem;
		font-weight: 800;
		margin: 1rem 0;
		color: white;
	}
</style>
